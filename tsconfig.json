{
  "compilerOptions": {            
    "target": "ES2019", 
    "module": "CommonJS", 
    "strict": true,                           
    "moduleResolution": "node",            
    "baseUrl": ".",
    "sourceMap": true,
    "esModuleInterop": true,  
    "allowJs": false,     
    "skipLibCheck": true, 
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*":["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [""]
}
